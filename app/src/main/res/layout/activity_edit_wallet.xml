<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.EditWalletActivity">

    <data>

        <variable
            name="wallet"
            type="model.model.Wallet"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:fitsSystemWindows="false">

        <ui.Col
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:padding="10dp">

            <ui.FrameShadow
                style="@style/item_shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <ui.Col
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ui.Row
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:text="@string/wallet_name_field"
                            android:textColor="#444"
                            app:_autoSize="true"
                            app:_font="regular"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#f5f5f5"/>

                        <ui.InputText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="textCapSentences"
                            android:text="@={wallet._name}"
                            android:textColor="#444"
                            app:_autoSize="true"
                            app:_font="regular"
                            app:_rippleColor="#15000000"/>
                    </ui.Row>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f5f5f5"/>

                    <ui.Row
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:paddingStart="15dp"
                            android:text="@string/wallet_transactions_count"
                            android:textColor="#555"
                            android:textSize="15sp"
                            app:_font="regular"
                            tools:ignore="RtlSymmetry"/>

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:paddingEnd="15dp"
                            android:text="@{String.valueOf(wallet._count)}"
                            android:textColor="#555"
                            android:textSize="15sp"
                            app:_font="regular"
                            tools:ignore="RtlSymmetry"/>
                    </ui.Row>

                    <ui.Row
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:paddingStart="15dp"
                            android:text="@string/wallet_total"
                            android:textColor="#555"
                            android:textSize="15sp"
                            app:_font="regular"
                            tools:ignore="RtlSymmetry"/>

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:paddingEnd="15dp"
                            android:text="@{wallet._money}"
                            android:textColor="#555"
                            android:textSize="15sp"
                            app:_font="regular"
                            tools:ignore="RtlSymmetry"/>
                    </ui.Row>

                </ui.Col>
            </ui.FrameShadow>

            <ui.Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                android:background="@color/red"
                android:onClick="deleteWallet"
                app:_backgroundIcon="#2000"
                app:_foreground="@color/white"
                app:_icon="î®³"
                app:_radius="@dimen/radius"
                app:_shadowColor="@color/red_shadow"
                app:_shadowSize="@dimen/shadow_size"
                app:_text="@string/edit_wallet_delete_button"
                app:_textAlign="left"/>
        </ui.Col>

        <ui.FrameShadow style="@style/top_bar">

            <ui.Row
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ui.Button
                    style="@style/button"
                    android:layout_width="50dp"
                    android:onClick="back"
                    app:_icon="@string/icon_back"/>

                <View style="@style/vr_line"/>

                <ui.Text
                    style="@style/text"
                    android:layout_weight="1"
                    android:text="@string/edit_wallet_title"/>

                <ui.Button
                    style="@style/button"
                    android:layout_width="50dp"
                    android:onClick="done"
                    app:_icon="@string/icon_done"/>

            </ui.Row>
        </ui.FrameShadow>
    </FrameLayout>
</layout>