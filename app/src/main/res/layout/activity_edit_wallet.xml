<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.EditWalletActivity">

    <data>

        <variable
            name="wallet"
            type="model.model.Wallet"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:clipChildren="false"
        android:fitsSystemWindows="false">

        <ui.Col
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="74dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layerType="software"
            android:padding="15dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layerType="software">

                <ui.Shadow
                    android:layout_width="match_parent"
                    android:layout_height="131dp"
                    app:_backgroundColor="#fff"
                    app:_shadowColor="#2000"
                    app:_shadowSize="8dp"/>

                <ui.Col
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ui.Row
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#fff"
                            android:gravity="center_vertical"
                            android:paddingEnd="15dp"
                            android:paddingStart="15dp"
                            android:text="@string/wallet_name_field"
                            android:textColor="#444"
                            app:_autoSize="true"
                            app:_font="regular"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#f5f5f5"/>

                        <ui.InputText
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="textCapSentences"
                            android:background="#fff"
                            android:text="@={wallet._name}"
                            android:textColor="#444"
                            app:_autoSize="true"
                            app:_font="regular"
                            app:_rippleColor="#15000000"/>
                    </ui.Row>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f5f5f5"/>

                    <ui.Row
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:paddingStart="15dp"
                            android:text="@string/wallet_transactions_count"
                            android:textColor="#555"
                            android:textSize="15sp"
                            app:_font="regular"
                            tools:ignore="RtlSymmetry"/>

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:paddingEnd="15dp"
                            android:text="@{String.valueOf(wallet._count)}"
                            android:textColor="#555"
                            android:textSize="15sp"
                            app:_font="regular"
                            tools:ignore="RtlSymmetry"/>
                    </ui.Row>

                    <ui.Row
                        android:layout_width="match_parent"
                        android:layout_height="40dp">

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:paddingStart="15dp"
                            android:text="@string/wallet_total"
                            android:textColor="#555"
                            android:textSize="15sp"
                            app:_font="regular"
                            tools:ignore="RtlSymmetry"/>

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:paddingEnd="15dp"
                            android:text="@{wallet._money}"
                            android:textColor="#555"
                            android:textSize="15sp"
                            app:_font="regular"
                            tools:ignore="RtlSymmetry"/>
                    </ui.Row>

                </ui.Col>
            </FrameLayout>

            <ui.Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="15dp"
                app:_background="#e74c3c"
                app:_backgroundIcon="#2000"
                app:_foreground="#fff"
                app:_icon=""
                android:onClick="deleteWallet"
                app:_shadowColor="#99e74c3c"
                app:_shadowSize="6dp"
                app:_text="@string/edit_wallet_delete_button"
                app:_textAlign="left"/>

        </ui.Col>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="24dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layerType="software">

            <ui.Shadow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="top"
                app:_backgroundColor="#3c6"
                app:_shadowColor="#3c6"
                app:_shadowSize="6dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            android:clipChildren="false">

            <ui.Row
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3c6">

                <ui.Button
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:onClick="back"
                    app:_background="#3c6"
                    app:_childRadius="none"
                    app:_font="regular"
                    app:_foreground="#fff"
                    app:_icon=""
                    app:_rippleColor="#99ffffff"
                    app:_textAlign="left"
                    app:_textPaddingLeft="false"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#9fff"/>

                <ui.Text
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/edit_wallet_title"
                    android:textColor="#fff"
                    app:_autoPadding="true"
                    app:_autoSize="true"
                    app:_font="regular"/>

                <ui.Button
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:onClick="done"
                    app:_background="#3c6"
                    app:_childRadius="none"
                    app:_font="regular"
                    app:_foreground="#fff"
                    app:_icon=""
                    app:_rippleColor="#99ffffff"
                    app:_textAlign="left"
                    app:_textPaddingLeft="false"/>

            </ui.Row>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#33cc66"/>

    </FrameLayout>
</layout>