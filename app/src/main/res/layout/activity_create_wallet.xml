<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.CreateWalletActivity">

    <data>

        <variable
            name="wallet"
            type="model.model.Wallet"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:clipChildren="false"
        android:fitsSystemWindows="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="74dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layerType="software"
            android:padding="30dp">

            <ui.Shadow
                android:layout_width="match_parent"
                android:layout_height="101dp"
                app:_backgroundColor="#fff"
                app:_shadowColor="#22000000"
                app:_shadowSize="8dp"/>

            <ui.Row
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ui.Col
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ui.Text
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:text="@string/wallet_name_field"
                        android:textColor="#444"
                        app:_autoSize="true"
                        app:_font="regular"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f5f5f5"/>

                    <ui.Text
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:paddingEnd="20dp"
                        android:paddingStart="20dp"
                        android:text="@string/wallet_total_field"
                        android:textColor="#444"
                        app:_autoPadding="true"
                        app:_autoSize="true"
                        app:_font="regular"/>
                </ui.Col>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#f5f5f5"/>

                <ui.Col
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ui.InputText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:inputType="textCapSentences"
                        android:text="@={wallet._name}"
                        android:textColor="#444"
                        app:_autoSize="true"
                        app:_font="regular"
                        app:_rippleColor="#15000000"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f5f5f5"/>

                    <ui.InputMoney
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:digits="0123456789"
                        android:inputType="numberDecimal"
                        android:text="@={wallet._money}"
                        android:textColor="#444"
                        app:_autoSize="true"
                        app:_font="regular"
                        app:_rippleColor="#15000000"/>

                </ui.Col>

            </ui.Row>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="24dp"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layerType="software">

            <ui.Shadow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="top"
                app:_backgroundColor="#3c6"
                app:_shadowColor="#3c6"
                app:_shadowSize="6dp"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:background="@android:color/white"
            android:clipChildren="false">

            <ui.Row
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3c6">

                <ui.Button
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:onClick="back"
                    app:_background="#3c6"
                    app:_childRadius="none"
                    app:_font="regular"
                    app:_foreground="#fff"
                    app:_icon=""
                    app:_rippleColor="#99ffffff"
                    app:_textAlign="left"
                    app:_textPaddingLeft="false"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="#9fff"/>

                <ui.Text
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|start"
                    android:text="@string/create_wallet_title"
                    android:textColor="#fff"
                    app:_autoPadding="true"
                    app:_autoSize="true"
                    app:_font="regular"/>

                <ui.Button
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:onClick="done"
                    app:_background="#3c6"
                    app:_childRadius="none"
                    app:_font="regular"
                    app:_foreground="#fff"
                    app:_icon=""
                    app:_rippleColor="#99ffffff"
                    app:_textAlign="left"
                    app:_textPaddingLeft="false"/>

            </ui.Row>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#33cc66"/>

    </FrameLayout>
</layout>