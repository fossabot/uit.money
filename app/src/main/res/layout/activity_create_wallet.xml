<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.CreateWalletActivity">

    <data>

        <variable
            name="wallet"
            type="model.model.Wallet"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:fitsSystemWindows="false">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp">

            <ui.FrameShadow
                style="@style/item_shadow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="25dp">

                <ui.Row
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ui.Col
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:paddingEnd="20dp"
                            android:paddingStart="20dp"
                            android:text="@string/wallet_name_field"
                            android:textColor="#444"
                            app:_autoSize="true"
                            app:_font="regular"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray"/>

                        <ui.Text
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:paddingEnd="20dp"
                            android:paddingStart="20dp"
                            android:text="@string/wallet_total_field"
                            android:textColor="#444"
                            app:_autoPadding="true"
                            app:_autoSize="true"
                            app:_font="regular"/>
                    </ui.Col>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#f5f5f5"/>

                    <ui.Col
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <ui.InputText
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="textCapSentences"
                            android:text="@={wallet._name}"
                            android:textColor="#444"
                            app:_autoSize="true"
                            app:_font="regular"
                            app:_rippleColor="#15000000"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#f5f5f5"/>

                        <ui.InputMoney
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:text="@={wallet._money}"
                            android:textColor="#444"
                            app:_autoSize="true"
                            app:_font="regular"
                            app:_rippleColor="#15000000"/>

                    </ui.Col>

                </ui.Row>
            </ui.FrameShadow>

        </FrameLayout>

        <ui.FrameShadow style="@style/top_bar">

            <ui.Row
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ui.Button
                    style="@style/button"
                    android:layout_width="50dp"
                    android:onClick="back"
                    app:_icon=""/>

                <View style="@style/vr_line"/>

                <ui.Text
                    style="@style/text"
                    android:layout_weight="1"
                    android:text="@string/create_wallet_title"/>

                <ui.Button
                    style="@style/button"
                    android:layout_width="50dp"
                    android:onClick="done"
                    app:_icon=""/>

            </ui.Row>
        </ui.FrameShadow>

    </FrameLayout>
</layout>