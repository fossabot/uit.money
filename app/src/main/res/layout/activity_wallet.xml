<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.WalletActivity">

    <data>

        <variable
            name="wallet"
            type="model.model.Wallet"/>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f5f5f5"
        android:clipChildren="false">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:layout_marginBottom="50dp"
            android:layout_marginStart="74dp"
            android:layout_marginTop="74dp"
            android:background="#3c6"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="74dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ui.List
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adapter="@{wallet.getTransactionAdapter()}"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:scrollbarSize="4dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbarThumbVertical="@color/scrollbarThumb"
                android:scrollbars="vertical"
                tools:ignore="RtlSymmetry"
                tools:itemCount="3"
                tools:listitem="@layout/item_bill"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="24dp"
            android:clipChildren="false">

            <ui.Shadow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:_backgroundColor="#3c6"
                app:_shadowColor="#3c6"
                app:_shadowSize="6dp"/>

            <ui.Row
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ui.Button
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    app:_background="@android:color/transparent"
                    app:_foreground="@android:color/white"
                    app:_icon=""/>

                <ui.Text
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@{wallet.name}"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    app:_autoSize="true"
                    app:_font="regular"
                    tools:ignore="RtlCompat"
                    tools:text="wallet.name"/>

            </ui.Row>
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#3c6"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ui.Shadow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:_backgroundColor="#fff"
                app:_shadowColor="#2000"
                app:_shadowSize="6dp"/>

            <ui.Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top"
                android:layout_marginStart="50dp"
                android:layout_marginTop="-15dp"
                android:clickable="false"
                android:clipChildren="false"
                app:_background="#3c6"
                app:_fontSize="medium"
                app:_foreground="#fff"
                app:_icon=""
                app:_radius="25dp"
                app:_shadowColor="#a3c6"
                app:_shadowSize="7dp"/>

            <ui.Text
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginStart="150dp"
                android:gravity="end|center_vertical"
                android:paddingEnd="30dp"
                android:text="@{model.Const.getMoney(wallet.money)}"
                android:textColor="#222222"
                android:textSize="18sp"
                app:_font="bold"
                tools:ignore="RtlSymmetry"
                tools:text="369.000 đ"/>
        </FrameLayout>
    </FrameLayout>
</layout>