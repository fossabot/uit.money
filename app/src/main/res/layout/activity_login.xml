            app:_foreground="@color/white"
            app:_icon=""
            app:_text="Đăng nhập với Facebook"/>

        <ui.components.Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="@color/facebook"
